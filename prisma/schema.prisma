generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  imageUrl    String
  name        String
  status      Status
  price       Decimal  @db.Decimal(10, 2)
  stock       Int
  availableAt DateTime
}

enum Status {
  active
  inactive
  archived
}